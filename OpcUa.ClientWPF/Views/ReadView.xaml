<UserControl
    x:Class="OpcUa.ClientWPF.Views.ReadView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:OpcUa.ClientWPF.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OpcUa.ClientWPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <WrapPanel Grid.Row="0" HorizontalAlignment="Center">
            <TextBlock Padding="5,0" Text="Node ID" />
            <TextBox Width="200" Text="{Binding NodeId, UpdateSourceTrigger=PropertyChanged}" />
            <Button
                Margin="5,0,0,0"
                Command="{Binding ReadNodeCommand}"
                Content="Read" />
        </WrapPanel>

        <controls:NodeAttributesCard
            Grid.Row="1"
            Padding="10,20"
            DataContext="{Binding NodeAttributesViewModel}"
            Loaded="NodeAttributesCard_Loaded" />
    </Grid>
</UserControl>
